#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
#include<string.h>
#include<windows.h>
#include<stdlib.h>
int main()
{
	char ar1[] = "welcome to home!!!!!!";
	char ar2[] = "#####################";
	int left = 0;
	int right = strlen(ar1)-1;//计算字符串长度
	while (left<=right)
	{
		ar2[left] = ar1[left];
		ar2[right] = ar1[right];
		system("cls");//清空屏幕
		printf("%s\n", ar2);
		Sleep(1000);//暂停一秒
		
		left++;
		right--;
	}
	return 0;
}




#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
int main()
{
	int i = 0;
	char password[10] = { 0 };
	for (i = 1; i <= 3; i++)
	{
		printf("请输入密码:\n");
		scanf("%s", password);
		if (strcmp(password, "1314520") == 0)
		{
			printf("密码正确\n");
			break;
		}
		else
			printf("密码错误\n");
	}
	return 0;
}
